<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_in_Action.QRGeneratorPage"
             Title="QRGeneratorPage">
    <VerticalStackLayout>
        <Label 
            Text="QR Generator"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="UrlEntry" Placeholder="" Text="https://www.microsoft.com" />
        <Button x:Name="GenerateQRButton" Text="Generate QR" Clicked="GenerateQRButton_Clicked"  />


        <Image x:Name="QrImage" Source="" />
        <Label x:Name="StatusLabel"
            Text=""
             />
    </VerticalStackLayout>
</ContentPage>